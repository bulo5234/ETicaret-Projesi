@model IEnumerable<ETicaret.Model.Entities.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Ürün Listesi</h1>
<a class="btn btn-success" asp-area="Admin" asp-controller="Product" asp-action="Add">Yeni Ürün Ekle</a>
<br />


@if (Model.Count() == 0)
{
    <div class="alert alert-danger">
        Kayıt Bulunamadı..!
    </div>
}
else
{
    
    <br />
    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">Ürün ID</th>
                <th scope="col">Ürün Adı</th>
                <th scope="col">Ürün Fiyatı</th>
                <th scope="col">Stok</th>
                <th scope="col">###</th>
                <th scope="col">###</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="col">@item.ID</th>
                    <th scope="col">@item.ProductName</th>
                    <th scope="col">@item.ProductPrice</th>
                    <th scope="col">@item.ProductStock</th>
                    <th scope="col"><a asp-area="Admin" asp-controller="Product" asp-action="Update" asp-route-id="@item.ID" class="btn btn-warning">Güncelle</a></th>
                    <th scope="col"><a asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@item.ID" class="btn btn-danger">Sil</a></th>
                </tr>
            }
        </tbody>
    </table>
}

